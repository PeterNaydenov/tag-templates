{
  "name": "@peter.naydenov/tag-templates",
  "description": "Template engine build on top of javascript native technologies: template literals and tag functions.",
  "version": "1.4.0",
  "license": "MIT",
  "author": "Peter Naydenov",
  "main": "./src/main.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/main.js",
      "require": "./dist/tag-templates.cjs",
      "default": "./src/main.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "scripts": {
    "test": "mocha test",
    "cover": "c8 mocha",
    "build": "rollup -c"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^10.1.3",
    "chai": "5.2.0",
    "mocha": "11.5.0",
    "rollup": "^4.44.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterNaydenov/tag-templates.git"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "keywords": [
    "template",
    "engine",
    "string",
    "tag",
    "function"
  ]
}
